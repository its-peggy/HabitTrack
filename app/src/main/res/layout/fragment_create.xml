<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_create_relative_layout"
    android:transitionName="shared_element_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CreateFragment">

    <EditText
        android:id="@+id/etCreateHabitName"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="32dp"
        android:layout_toEndOf="@+id/ibIconButton"
        android:ems="10"
        android:hint="Habit name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etCreateHabitGoalQty"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ibIconButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="6dp"
        android:ems="10"
        android:hint="Goal qty"
        android:inputType="number" />

    <EditText
        android:id="@+id/etCreateHabitUnits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etCreateHabitName"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="30dp"
        android:layout_toEndOf="@+id/etCreateHabitGoalQty"
        android:ems="10"
        android:hint="Units"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/spCreateTimeOfDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etCreateHabitGoalQty"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="4dp" />

    <Spinner
        android:id="@+id/spCreateTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spCreateTimeOfDay"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="4dp" />

    <TimePicker
        android:id="@+id/tpCreateReminderTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spCreateTag"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="4dp"
        android:timePickerMode="spinner" />

    <Button
        android:id="@+id/btnCreateHabit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tpCreateReminderTime"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text="Create habit" />

    <ImageButton
        android:id="@+id/ibIconButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="6dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_baseline_add_circle_24"
        tools:src="@drawable/ic_baseline_add_circle_24" />
</RelativeLayout>