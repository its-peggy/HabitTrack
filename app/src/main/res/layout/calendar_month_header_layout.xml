<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvCalendarMonthHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/athiti"
        android:paddingLeft="14dp"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        android:textColor="@color/dark_grey"
        android:textSize="26sp"
        tools:text="July 2021" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCalendarMonthHeader"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvHeaderSun"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/athiti"
            android:text="Sun"
            android:textAlignment="center"
            android:textSize="14dp"
            tools:text="Sun" />

        <TextView
            android:id="@+id/tvHeaderMon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/athiti"
            android:text="Mon"
            android:textAlignment="center"
            android:textSize="14dp"
            tools:text="Mon" />

        <TextView
            android:id="@+id/tvHeaderTue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/athiti"
            android:text="Tue"
            android:textAlignment="center"
            android:textSize="14dp"
            tools:text="Tue" />

        <TextView
            android:id="@+id/tvHeaderWed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/athiti"
            android:text="Wed"
            android:textAlignment="center"
            android:textSize="14dp"
            tools:text="Wed" />

        <TextView
            android:id="@+id/tvHeaderThu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/athiti"
            android:text="Thu"
            android:textAlignment="center"
            android:textSize="14dp"
            tools:text="Thu" />

        <TextView
            android:id="@+id/tvHeaderFri"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/athiti"
            android:text="Fri"
            android:textAlignment="center"
            android:textSize="14dp"
            tools:text="Fri" />

        <TextView
            android:id="@+id/tvHeaderSat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/athiti"
            android:text="Sat"
            android:textAlignment="center"
            android:textSize="14dp"
            tools:text="Sat" />


    </LinearLayout>

</RelativeLayout>